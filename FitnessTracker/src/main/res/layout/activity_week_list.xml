<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <fragment
        android:id="@+id/week_list"
        android:name="de.ubuntudroid.fitnesstracker.controller.fragments.WeekListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="de.ubuntudroid.fitnesstracker.controller.activities.WeekListActivity"
        tools:layout="@android:layout/list_content" />

    <com.shamanland.fab.FloatingActionButton
        android:id="@+id/add_week_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_action_add"
        android:onClick="onAddWeek"
        app:floatingActionButtonSize="normal"
        app:floatingActionButtonColor="@drawable/button_press_state_list_elevator"/>

</FrameLayout>

